            <cursor>
                <Cursor fx:constant="HAND" />
            </cursor>
        </JFXButton>
        <JFXButton buttonType="RAISED" layoutX="521.0" layoutY="504.0" onAction="#btnBackOnAction" prefHeight="35.0" prefWidth="61.0" style="-fx-background-color: grey;" text="Back">
            <cursor>
                <Cursor fx:constant="HAND" />
            </cursor>
        </JFXButton>
        <TableView fx:id="tblCustomer" layoutX="23.0" layoutY="273.0" prefHeight="200.0" prefWidth="563.0">
            <columns>
                <TableColumn fx:id="colId" prefWidth="51.0" text="Id" />
                <TableColumn fx:id="colName" prefWidth="176.0" text="Name" />
                <TableColumn fx:id="colAddress" prefWidth="186.0" text="Address" />
                <TableColumn fx:id="colSalary" prefWidth="86.0" text="Salary" />
            </columns>
        </TableView>
    </children>
</AnchorPane>
